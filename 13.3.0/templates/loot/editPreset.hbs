<div class="tables">
	<div class="body">
		<span style="width: 48%;">{{localize 'WFRP4E.Looting.Menu.Loot.Preset.Table'}}</span>
		<span style="width: 32%;">{{localize 'WFRP4E.Looting.Menu.Loot.Preset.Chance'}}</span>
		<span style="width: 20%;">{{localize 'Quantity'}}</span>
	</div>
	<ul id="tables">
		{{#each preset.tables}}
		<li>
			<div class="body">
				{{#if this.table.key}}
				<div class="table" style="width: 48%;">
					<input id="tableKey" style="flex: 1;" type="string" value="{{this.table.key}}" placeholder="{{localize 'TABLE.Key'}}" {{#if (eq ../type "default")}}disabled{{/if}}>
					<input id="tableColumn" style="flex: 1;" type="string" value="{{this.table.column}}" placeholder="{{localize 'TABLE.Column'}}" {{#if (eq ../type "default")}}disabled{{/if}}>
				</div>
				{{else}}
				<select id="table" style="width: 48%; padding: 0;" {{#if (eq ../type "default")}}disabled{{/if}}>
					<option hidden disabled selected value="false">{{localize 'WFRP4E.Looting.Menu.Loot.Table.Select'}}</option>
					{{#each ../tables}}
					<option data-tooltip="{{localize 'Cost'}}: <span style='color: var(--presetType);'>{{this.price}} <i class='fas fa-coins'></i></span><br>{{localize 'WFRP4E.Looting.Menu.Loot.Table.Values'}} ({{this.weights}}):<ul>{{#each this.values}}<li>{{this.name}} ({{this.weight}})</li>{{/each}}</ul>" value="{{this.table}}"{{#if (eq this.table ../this.table)}} selected{{/if}}{{#if this.type}} data-type="{{this.type}}"{{/if}}>{{this.title}}</option>
					{{/each}}
				</select>
				{{/if}}
				<div style="width: 32%;">
					<input id="chance" type="range" value="{{this.chance}}" min="0" max="100" {{#if (eq ../type "default")}}disabled{{/if}}>
					<output>{{this.chance}}%</output>
				</div>
				<div style="width: {{#if (eq ../type "default")}}20{{else}}16{{/if}}%;">
					<input id="diceCount" style="flex: 2;" type="number" value="{{this.dice.count}}" min="1" step="1" {{#if (eq ../type "default")}}disabled{{/if}}>
					<span style="flex: 1;">d</span>
					<select id="diceType" style="flex: 3;" {{#if (eq ../type "default")}}disabled{{/if}}>
						<option {{#if (eq this.dice.type 1)}}selected{{/if}}>1</option>
						<option {{#if (eq this.dice.type 2)}}selected{{/if}}>2</option>
						<option {{#if (eq this.dice.type 5)}}selected{{/if}}>5</option>
						<option {{#if (eq this.dice.type 10)}}selected{{/if}}>10</option>
						<option {{#if (eq this.dice.type 20)}}selected{{/if}}>20</option>
						<option {{#if (eq this.dice.type 100)}}selected{{/if}}>100</option>
					</select>
				</div>
				<button type="button" data-action="removeTable" style="width: 4%;" data-tooltip="{{localize 'WFRP4E.Looting.Menu.Loot.Table.Remove'}}" {{#if (eq ../type "default")}}hidden{{/if}}><i class="fas fa-trash"></i></button>
			</div>
		</li>
		{{/each}}
	</ul>
	<div class="buttons">
		<button type="button" data-action="addTable" data-tooltip="{{localize 'WFRP4E.Looting.Menu.Loot.Table.Add'}}" {{#if (eq type "default")}}hidden{{/if}}><i class='fas fa-plus'></i></button>
		<button type="button" data-action="addCustomTable" data-tooltip="{{localize 'WFRP4E.Looting.Menu.Loot.Table.AddCustom'}}" {{#if (eq type "default")}}hidden{{/if}}><i class='fas fa-plus' style="color: var(--gold);"></i></button>
	</div>
</div>