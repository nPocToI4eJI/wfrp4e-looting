				<input id="GC-diceCount" style="flex: 2;" type="number" value="{{preset.money.gc.dice.count}}" min="1" step="1" {{#if (eq type "default")}}disabled{{/if}}>
				<span style="flex: 1;">d</span>
				<select id="GC-diceType" style="flex: 3;" {{#if (eq type "default")}}disabled{{/if}}>
					<option {{#if (eq preset.money.gc.dice.type 1)}}selected{{/if}}>1</option>
					<option {{#if (eq preset.money.gc.dice.type 2)}}selected{{/if}}>2</option>
