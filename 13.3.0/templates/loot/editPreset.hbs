				<output>{{preset.money.ss.chance}}%</output>
			</div>
			<div style="flex: 3;">
				<input id="SS-diceCount" style="flex: 2;" type="number" value="{{preset.money.ss.dice.count}}" min="1" step="1" {{#if (eq type "default")}}disabled{{/if}}>
				<span style="flex: 1;">d</span>
				<select id="SS-diceType" style="flex: 3;" {{#if (eq type "default")}}disabled{{/if}}>
					<option {{#if (eq preset.money.ss.dice.type 1)}}selected{{/if}}>1</option>
					<option {{#if (eq preset.money.ss.dice.type 2)}}selected{{/if}}>2</option>
					<option {{#if (eq preset.money.ss.dice.type 5)}}selected{{/if}}>5</option>
					<option {{#if (eq preset.money.ss.dice.type 10)}}selected{{/if}}>10</option>
					<option {{#if (eq preset.money.ss.dice.type 20)}}selected{{/if}}>20</option>
					<option {{#if (eq preset.money.ss.dice.type 100)}}selected{{/if}}>100</option>
				</select>
			</div>
		</div>
	</div>
	<div class="body">
		<img src="modules/wfrp4e-core/icons/currency/goldcrown.png"></img>
		<div>
			<span style="flex: 2;">{{localize 'WFRP4E.Looting.Menu.Loot.Preset.Chance'}}</span>
			<span style="flex: 3;">{{localize 'Quantity'}}</span>
		</div>
		<div>
			<div style="flex: 2;">
				<input id="GC-chance" type="range" value="{{preset.money.gc.chance}}" min="0" max="100" {{#if (eq type "default")}}disabled{{/if}}>
