<div class="header">
	<div class="body">
		<input id="name" type="string" value="{{preset.name}}" data-tooltip="{{localize 'WFRP4E.Looting.Menu.Loot.Preset.Name'}}" {{#if (eq type "default")}}disabled{{/if}}>
		<select id="type" class="{{#if (eq preset.type "brass")}}brass{{else if (eq preset.type "silver")}}silver{{else if (eq preset.type "gold")}}gold{{/if}}" {{#if (eq type "default")}}disabled{{/if}}>
			<option {{#if (eq preset.type "brass")}}selected{{/if}} value="brass" class="brass">{{localize 'TIER.Brass'}}</option>
			<option {{#if (eq preset.type "silver")}}selected{{/if}} value="silver" class="silver">{{localize 'TIER.Silver'}}</option>
			<option {{#if (eq preset.type "gold")}}selected{{/if}} value="gold" class="gold">{{localize 'TIER.Gold'}}</option>
		</select>
	</div>
	<textarea id="hint" {{#if (eq type "default")}}disabled{{/if}}>{{preset.hint}}</textarea>
</div>
<div class="money">
	<div class="body">
		<img src="modules/wfrp4e-core/icons/currency/brasspenny.png"></img>
		<div>
			<span style="flex: 2;">{{localize 'WFRP4E.Looting.Menu.Loot.Preset.Chance'}}</span>
			<span style="flex: 3;">{{localize 'Quantity'}}</span>
		</div>
		<div>
			<div style="flex: 2;">
				<input id="BP-chance" type="range" value="{{preset.money.bp.chance}}" min="0" max="100" {{#if (eq type "default")}}disabled{{/if}}>
				<output>{{preset.money.bp.chance}}%</output>
			</div>
			<div style="flex: 3;">
				<input id="BP-diceCount" style="flex: 2;" type="number" value="{{preset.money.bp.dice.count}}" min="1" step="1" {{#if (eq type "default")}}disabled{{/if}}>
				<span style="flex: 1;">d</span>
				<select id="BP-diceType" style="flex: 3;" {{#if (eq type "default")}}disabled{{/if}}>
					<option {{#if (eq preset.money.bp.dice.type 1)}}selected{{/if}}>1</option>
					<option {{#if (eq preset.money.bp.dice.type 2)}}selected{{/if}}>2</option>
					<option {{#if (eq preset.money.bp.dice.type 5)}}selected{{/if}}>5</option>
					<option {{#if (eq preset.money.bp.dice.type 10)}}selected{{/if}}>10</option>
					<option {{#if (eq preset.money.bp.dice.type 20)}}selected{{/if}}>20</option>
					<option {{#if (eq preset.money.bp.dice.type 100)}}selected{{/if}}>100</option>
				</select>
			</div>
		</div>
	</div>
	<div class="body">
		<img src="modules/wfrp4e-core/icons/currency/silvershilling.png"></img>
		<div>
